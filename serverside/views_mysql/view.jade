doctype html
html
    head
        meta(charset="utf-8")
    body
        h1 
            a(href="/topic") Server Side JAVASCRIPT
        ul
            each topic in topics
                li
                    a(href="/topic/"+topic.no)= topic.title
        aricle 
            if topic
                h2= topic.title
                = topic.memo
            else
                h2 welcome
                | this is ...
        ul
            li
                a(href="/topic/add") write
            if topic
                li
                    a(href="/topic/"+topic.no+"/edit") edit
                li
                    a(href="/topic/"+topic.no+"/delete") delete